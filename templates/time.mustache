{{!
    @template availability_time/time

    Displays a time selector

    Example context (json):
    {

    }
}}
<span class="col-form-label pr-3"><label>{{#str}} title, availability_time {{/str}}</label></span>
<span class="availability-group form-group">
    <label><span>{{#str}} from, availability_time {{/str}}</span>
    <select name="availability_time_from_hour" class="custom-select">
    {{#hours}}
        <option value="{{hour}}">{{hour}}</option>
    {{/hours}}
    </select>
    :
    <select name="availability_time_from_minute" class="custom-select">
    {{#minutes}}
        <option value="{{minute}}">{{minute}}</option>
    {{/minutes}}
    </select>
    </label>

    <label><span>{{#str}} to, availability_time {{/str}}</span>
    <select name="availability_time_to_hour" class="custom-select">
    {{#hours}}
        <option value="{{hour}}">{{hour}}</option>
    {{/hours}}
    </select>
    :
    <select name="availability_time_to_minute" class="custom-select">
    {{#minutes}}
        <option value="{{minute}}">{{minute}}</option>
    {{/minutes}}
    </select>
    </label>
</span>
